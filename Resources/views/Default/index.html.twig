{# app/Resources/views/lucky/number.html.twig #}
{% extends 'base.html.twig' %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/godcodes/js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/godcodes/js/app.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>DCodes generator</h1>
    <div>
        <div style="padding-top: 1em;">
            <span style="margin-right: 5px;">Length of discout code</span><input id="length" type="text" required="required" pattern="^(0|[1-9][0-9]*)$"/><span style="margin-left: 5px;">(4 - 1000)</span>
        </div>
        <div style="padding-top: 1em;">
            <span style="margin-right: 5px;">Number of discout code</span><input id="count" type="text" required="required" pattern="^(0|[1-9][0-9]*)$"/><span style="margin-left: 5px;">(1 - 1000000)</span>
        </div>
        <div style="padding-top: 1em;">
            <button id="submit">Submit</button>
        </div>
        <div style="padding-top: 1em;">
            <div id="results" style="width: 300px; height: 300px; overflow: scroll; padding: 1px; border: 1px solid grey; font-family: 'Courier New'">

            </div>
        </div>

    </div>
{% endblock %}